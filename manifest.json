{
    "manifest_version": 2,
    "name": "Minds control",
    "version": "0.1",
    "description": "Cleanup default newsfeed in Minds, hide boosted posts and boost carousel",
    "homepage_url": "https://github.com/pietro-a/minds_control",

    "icons": {
        "48": "icons/minds_control-48.png",
        "96": "icons/minds_control-96.png"
    },

    "content_scripts": [{
        "matches": ["https://www.minds.com/newsfeed/subscriptions"],
        "css": ["css/minds_control.css"]
    }]
}
